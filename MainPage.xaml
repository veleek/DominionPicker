<phone:PhoneApplicationPage 
    x:Class="Ben.Dominion.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:controls="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls"
    xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:local="clr-namespace:Ben.Dominion"
    xmlns:localControls="clr-namespace:Ben.Controls"
    xmlns:ad="clr-namespace:Microsoft.Advertising.Mobile.UI;assembly=Microsoft.Advertising.Mobile.UI"
    mc:Ignorable="d" d:DesignWidth="480" d:DesignHeight="728" 
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="Portrait"  Orientation="Portrait"
    shell:SystemTray.IsVisible="False">
    
    <phone:PhoneApplicationPage.Resources>
        <ResourceDictionary>
            <local:Cards x:Key="Cards"/>

            <DataTemplate x:Key="BasicOptionTemplate">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding Name}" />
                    <TextBlock Text="{Binding OptionValue, Converter={StaticResource StringConverter}}" />
                </StackPanel>
            </DataTemplate>

            <DataTemplate x:Key="BooleanOptionTemplate">
                <CheckBox IsChecked="{Binding OptionValue, Mode=TwoWay}" Content="{Binding Name}" />
            </DataTemplate>

            <DataTemplate x:Key="ListOptionTemplate">
                <CheckBox IsChecked="{Binding OptionValue, Mode=TwoWay}" HorizontalContentAlignment="Stretch">
                    <CheckBox.Content>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>


                            <TextBlock Grid.Column="0"  Text="{Binding Name}" VerticalAlignment="Center"/>
                            <toolkit:ListPicker Grid.Column="1" Margin="12,0"
                                                ItemsSource="{Binding ValidValues}" 
                                                SelectedItem="{Binding SelectedValue, Mode=TwoWay}" 
                                                ListPickerMode="Expanded"/>
                            
                            <TextBlock Grid.Row="1" Grid.ColumnSpan="2"
                                       Visibility="{Binding OptionValue, Converter={StaticResource BooleanToVisibilityConverter}}"
                                       Text="{Binding Notes}" Style="{StaticResource PhoneTextSubtleStyle}"
                                       TextAlignment="Center"/>
                        </Grid>
                    </CheckBox.Content>
                </CheckBox>
            </DataTemplate>

            <local:OptionTemplateSelector x:Key="OptionsTemplateSelector"
                                          BasicOptionTemplate="{StaticResource BasicOptionTemplate}"
                                          BooleanOptionTemplate="{StaticResource BooleanOptionTemplate}"
                                          ListOptionTemplate="{StaticResource ListOptionTemplate}" />
        </ResourceDictionary>
    </phone:PhoneApplicationPage.Resources>

    <Grid x:Name="LayoutRoot" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <StackPanel x:Name="AdContainer" Grid.Row="0"/>
        
        <ProgressBar x:Name="GenerationProgressBar"
                     Style="{StaticResource PerformanceProgressBar}"
                     Grid.Row="1"
                     VerticalAlignment="Top"
                     Visibility="Collapsed"/>
        
        <controls:Pivot Title="Dominion Picker" x:Name="RootPivot"
                        Grid.Row="1" Margin="0,-10, 0, 0">
            <controls:PivotItem Header="create" Margin="6,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <ScrollViewer x:Name="SettingsScrollViewer">
                        <StackPanel>
                            <ItemsControl x:Name="SetsItemsControl"
                                          ItemsSource="{Binding CurrentSettings.Sets}"
                                          Margin="0">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <toolkit:WrapPanel />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Margin="0,-5,-5,-5"
                                                  Grid.Column="0"
                                                  Width="225"
                                                  IsChecked="{Binding IsSelected, Mode=TwoWay}">
                                            <CheckBox.Content>
                                                <TextBlock Text="{Binding Set}" FontSize="24" />
                                            </CheckBox.Content>
                                        </CheckBox>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <TextBlock Margin="6,0" Text="options" Style="{StaticResource PhoneTextSubtleStyle}" />
                            <localControls:MultiTemplateItemsControl x:Name="OptionsItemsControl"
                                                             TemplateSelector="{StaticResource OptionsTemplateSelector}"
                                                             ItemsSource="{Binding CurrentSettings.AllOptions}"
                                                             Margin="12,0">
                            </localControls:MultiTemplateItemsControl>
                        </StackPanel>
                    </ScrollViewer>

                    <Button x:Name="CreateButton" Grid.Row="1" Content="Generate Set" Click="CreateButton_Click" Height="100"></Button>
                </Grid>
            </controls:PivotItem>

            <controls:PivotItem Header="favorites" Margin="12,0">
                <ListBox x:Name="FavoritesListBox" Margin="0,0,-12,0" ItemsSource="{Binding FavoriteSettings}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <Button Click="LoadButton_Click">
                                    <Button.Template>
                                        <ControlTemplate>
                                            <StackPanel>
                                                <TextBlock Text="{Binding Name}" Margin="12,0,0,0" 
                                                       Style="{StaticResource PhoneTextExtraLargeStyle}"/>
                                                <TextBlock Text="{Binding SetsString}" Margin="24,0,0,0"
                                                       Style="{StaticResource PhoneTextSubtleStyle}" />
                                            </StackPanel>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </controls:PivotItem>

            <!--<controls:PivotItem Header="log" Visibility="Collapsed">
                <ScrollViewer>
                    <ItemsControl x:Name="AppLogListBox">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Text}" Style="{StaticResource PhoneTextLargeStyle}" TextWrapping="Wrap"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </controls:PivotItem>-->
        </controls:Pivot>

        <local:AddFavoritePopupControl x:Name="AddFavoritePopup"
                                       Grid.Row="0" Grid.RowSpan="2"/>
        
        <Border x:Name="RequestReviewPopup"
                Grid.RowSpan="2"
                Background="#88000000"
                Visibility="Collapsed">
            <Border Width="360" Height="200"
                    Background="Black"
                    BorderBrush="White"
                    BorderThickness="1"
                    CornerRadius="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock TextAlignment="Center"
                               Grid.Row="0"
                               Grid.ColumnSpan="2"
                               TextWrapping="Wrap"
                               VerticalAlignment="Center"
                               Margin="30,5,30,0">
                        Hey!  You've used Dominion Picker a few times now.
                    </TextBlock>

                    
                    <TextBlock TextAlignment="Center"
                               Grid.ColumnSpan="2"
                               Grid.Row="1"
                               TextWrapping="Wrap"
                               VerticalAlignment="Center"
                               Margin="5,0">
                        Want to leave a review? 
                        <LineBreak/>
                        Don't worry, we won't ask you again.
                    </TextBlock>
                    
                    <Button x:Name="RequestReviewOk"
                            Content="Sure Thing!"
                            Grid.Row="2" Grid.Column="0"
                            Click="RequestReviewOk_Click"/>

                    <Button x:Name="RequestReviewCancel"
                            Content="No Thanks"
                            Grid.Row="2" Grid.Column="1"
                            Click="RequestReviewCancel_Click"/>
                </Grid>
            </Border>
        </Border>
    </Grid>
 
    <phone:PhoneApplicationPage.ApplicationBar>
        <shell:ApplicationBar IsVisible="True" IsMenuEnabled="True">
            <shell:ApplicationBarIconButton IconUri="/Images/appbar.reset.png" Text="reset" Click="Reset_Click"/>
            <shell:ApplicationBarIconButton IconUri="/Images/appbar.favs.addto.png" Text="save fav..." Click="AddFavorite_Click"/>            
            <!--<shell:ApplicationBarIconButton IconUri="/Images/appbar.lock.png" Text="Lock"/>-->
            <shell:ApplicationBar.MenuItems>
                <shell:ApplicationBarMenuItem Text="Clear Favorites" Click="ClearFavorites_Click"/>
                <shell:ApplicationBarMenuItem Text="About..." Click="About_Click" x:Name="Unlock"/>
            </shell:ApplicationBar.MenuItems>
        </shell:ApplicationBar>
    </phone:PhoneApplicationPage.ApplicationBar>

</phone:PhoneApplicationPage>