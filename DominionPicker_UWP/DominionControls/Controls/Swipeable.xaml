<UserControl x:Class="Ben.Controls.Swipeable" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" d:DesignHeight="80" d:DesignWidth="480">
  <Border BorderThickness="3" BorderBrush="Firebrick" MinWidth="10" MinHeight="10">
    <Grid x:Name="LayoutRoot">
      <Grid.RenderTransform>
        <CompositeTransform x:Name="SwipeTransform" x:FieldModifier="internal" />
      </Grid.RenderTransform>
      <CheckBox>
        <ContentPresenter x:Name="SwipableContent" x:FieldModifier="internal" />
      </CheckBox>
    </Grid>
  </Border>
  <!--FontSize="{StaticResource PhoneFontSizeNormal}"-->
</UserControl>