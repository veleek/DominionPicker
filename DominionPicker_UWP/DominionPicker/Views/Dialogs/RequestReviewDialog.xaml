<ContentDialog
    x:Class="Ben.Dominion.Views.RequestReviewDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Ben.Dominion.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Would you like to leave a review?"
    PrimaryButtonText="Sure Thing!"
    PrimaryButtonClick="RequestReviewOk_Click"
    SecondaryButtonText="No Thanks"
    SecondaryButtonClick="RequestReviewCancel_Click">

  <TextBlock TextAlignment="Center" TextWrapping="Wrap" 
             VerticalAlignment="Center" Margin="0,12,0,0">
        Hey!  You've used Dominion
        <LineBreak />
        Picker a few times now!
        <LineBreak />
        Want to leave a review?
        <LineBreak />
        Don't worry, we won't ask you again.
  </TextBlock>
</ContentDialog>
