                               Width="60" Height="60" Margin="12,0"/>
                        <TextBlock Text="{Binding Cost}" Grid.Column="0" Margin="0,-5,0,5"
                                   Foreground="Black" Style="{StaticResource CardTitleTextStyle}"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding SetPrefix}" Grid.Column="1"
                                   Style="{StaticResource PhoneTextSubtleStyle}"
                                   TextAlignment="Right"
                                   VerticalAlignment="Top"
                                   Margin="0,-2,6,0" Foreground="White"/>
                        <TextBlock Text="{Binding Name}" Grid.Column="1"
                                   Style="{StaticResource CardTitleTextStyle}" 
                                   Margin="3,2,12,0" Foreground="Black"/>
                        <TextBlock Text="{Binding Name}" Grid.Column="1"
                                   Style="{StaticResource CardTitleTextStyle}" 
                                   Margin="0,0,12,0" Foreground="White"/>

                    </Grid>
                </Border>
