            <DataTemplate x:Key="NewCardItemTemplate">
            	<ScrollViewer HorizontalScrollBarVisibility="Visible" 
            		VerticalScrollBarVisibility="Disabled"
            		ManipulationCompleted="ScrollViewer_ManipulationCompleted"
            		d:DesignWidth="480"
            		d:DataContext="{d:DesignData Source=SampleData/CardSampleData.xaml}">
            		<Border Margin="2" 
            			Background="{Binding BackgroundColor}"
            			CornerRadius="5"
            			Tap="CardItem_Tap">
            			<Grid Margin="0,1">
            				<Grid.ColumnDefinitions>
            					<ColumnDefinition Width="Auto"/>
            					<ColumnDefinition Width="Auto" MinWidth="6"/>
            					<ColumnDefinition Width="*"/>
            					<ColumnDefinition Width="Auto"/>
            				</Grid.ColumnDefinitions>
            				<Image Source="/Images/coin.png" Grid.Column="0" Width="32" Height="32" Margin="12,0,6,0"/>
            				<TextBlock Text="{Binding CoinCost}" Grid.Column="0" Margin="5,0,0,0" Style="{StaticResource CardCostTextStyle}"/>
            				<Image Source="/Images/potion_small.png" Height="30" Grid.Column="1" Margin="0,0,12,0" Visibility="{Binding HasPotion, Converter={StaticResource BooleanToVisibilityConverter}}" />
            				<TextBlock Text="{Binding Name}" Grid.Column="2" Margin="2,6,12,0" Style="{StaticResource CardNameTextStyle}" Foreground="Black"/>
            				<TextBlock Text="{Binding Name}" Grid.Column="2" Margin="0,3,12,0" Style="{StaticResource CardNameTextStyle}" Foreground="White"/>
							<Border Background="{Binding Set, Converter={StaticResource ImageConverter}, ConverterParameter='Images\\SetIcons'}"
                                    Grid.Column="2"
                                    HorizontalAlignment="Right"
                                    Width="40"
									Margin="5,5"/>
            			</Grid>
            		</Border>
            	</ScrollViewer>
            </DataTemplate>
        </Grid.Resources>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel x:Name="TitlePanel" Grid.Row="0" Margin="12,0,0,6">
            <TextBlock x:Name="ApplicationTitle" Text="Dominion Picker" Style="{StaticResource PhoneTextNormalStyle}"/>
            <TextBlock x:Name="PageTitle" Text="Results" Margin="9,-7,0,-10" Style="{StaticResource PhoneTextTitle1Style}"/>
        </StackPanel>

        <TextBlock Style="{StaticResource PhoneTextSubtleStyle}" TextAlignment="Right" Margin="0,0,12,0">
            Swipe to Replace<LineBreak/>Tap for Info
        </TextBlock> 

        <Grid x:Name="ContentPanel" Grid.Row="1" Margin="12,0,12,0"
              d:DataContext="{d:DesignData Source=SampleData/PickerResultSampleData.xaml}">
            <ScrollViewer>
                <StackPanel>
                    <ItemsControl x:Name="CardsList" ItemsSource="{Binding Result.Cards}"
                                  ItemTemplate="{StaticResource NewCardItemTemplate}"/>
                    <TextBlock Text="Additional Cards" 
                               Visibility="{Binding Result.AdditionalCards.Count, Converter={StaticResource IsValidToVisibilityConverter}}" 
                               Style="{StaticResource PhoneTextSubtleStyle}"/>
                    <ItemsControl x:Name="AdditionalCardsList" ItemsSource="{Binding Result.AdditionalCards}"
                                  ItemTemplate="{StaticResource NewCardItemTemplate}"/>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <local:AddFavoritePopupControl x:Name="AddFavoritePopup" 
                                       Grid.RowSpan="2"
                                       SaveFavorite="AddFavoritePopup_SaveFavorite"/>
    </Grid>

    <phone:PhoneApplicationPage.ApplicationBar>
        <shell:ApplicationBar IsVisible="True" IsMenuEnabled="True">
            <shell:ApplicationBarIconButton x:Name="AppBarRefreshButton" IconUri="/Images/appbar.refresh.png" Text="regenerate" Click="Refresh_Click"/>
            <shell:ApplicationBarIconButton x:Name="AppBarSortButton" IconUri="/Images/appbar.sort.name.png" Text="sort by name" Click="Sort_Click" />
            <shell:ApplicationBarIconButton IconUri="/Images/appbar.favs.addto.png" Text="save" Click="AddFavorite_Click"/>
            <shell:ApplicationBar.MenuItems>
                <shell:ApplicationBarMenuItem Text="Card Lookup/Filter" Click="FilterCards_Click" />
                <shell:ApplicationBarMenuItem Text="Help/About..." Click="About_Click"/>
            </shell:ApplicationBar.MenuItems>
        </shell:ApplicationBar>
    </phone:PhoneApplicationPage.ApplicationBar>

</phone:PhoneApplicationPage>
