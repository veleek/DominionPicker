<UserControl x:Class="Ben.Controls.Swipable"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">

    <Border BorderThickness="3" BorderBrush="Firebrick" MinWidth="10" MinHeight="10">
        <Grid x:Name="LayoutRoot">
            <Grid.RenderTransform>
                <CompositeTransform x:Name="SwipeTransform" TranslateX="30" Rotation="12" />
            </Grid.RenderTransform>
            <CheckBox Content="Sample" />
            <ContentPresenter x:Name="SwipableContent">
            </ContentPresenter>
        </Grid>
    </Border>
</UserControl>
